{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["lib"],
  "exclude": ["build", "test"],
  "compilerOptions": {
    "target": "ES2017",
    "outDir": "build",
    "allowJs": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true
  }
}
